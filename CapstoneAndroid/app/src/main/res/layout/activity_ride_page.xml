<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RidePage">

    <TextView
        android:id="@+id/rideTxt"
        android:layout_width="242dp"
        android:layout_height="61dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="510dp"
        android:contentDescription="@string/rideTxt"
        android:gravity="center"
        android:text="@string/rideTxt"
        android:textColor="#004E71"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/linesBottom"
        android:layout_width="341dp"
        android:layout_height="185dp"
        android:layout_marginTop="570dp"
        android:contentDescription="@string/linesBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/linesbottom" />

    <TextView
        android:id="@+id/PTCLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="280dp"
        android:contentDescription="@string/PTCLogo"
        android:text="@string/PTCLogo"
        android:textColor="#004E71"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/rideShareLogo"
        android:layout_width="246dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="561dp"
        android:contentDescription="@string/rideShareLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ridesharelogo" />

    <ScrollView
        android:layout_width="388dp"
        android:layout_height="346dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/destinationInput"
                android:layout_width="341dp"
                android:layout_height="40dp"
                android:autofillHints=""
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/DestinationTxt"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/DestinationTxt"
                android:text="@string/DestinationTxt"
                android:textColor="#004E71"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="186dp"
                android:layout_height="33dp"
                android:contentDescription="@string/dateTxt"
                android:text="@string/dateTxt"
                android:textColor="#004E71"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/timeInput"
                android:layout_width="341dp"
                android:layout_height="40dp"
                android:autofillHints=""
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:inputType="time" />

            <TextView
                android:id="@+id/pickupTxt"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/pickupTxt"
                android:text="@string/pickupTxt"
                android:textColor="#004E71"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/subBTN"
                android:layout_width="225dp"
                android:layout_height="51dp"
                android:contentDescription="@string/subBTN"
                android:text="@string/subBTN"
                android:textColor="#004E71"
                android:textSize="18sp"
                app:backgroundTint="#CFD400"
                app:cornerRadius="15sp" />

            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="156dp"
                android:layout_height="32dp"
                android:contentDescription="@string/timeTxt"
                android:text="@string/timeTxt"
                android:textColor="#004E71"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dateInput"
                android:layout_width="364dp"
                android:layout_height="40dp"
                android:autofillHints=""
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:inputType="date" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>